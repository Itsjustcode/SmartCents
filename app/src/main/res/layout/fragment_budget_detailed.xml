<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Top text -->
    <TextView
            android:id="@+id/top_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your budget"
            android:textSize="64sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" android:translationX="10dp"/>

    <!-- Budget = Integrate later-->
    <TextView
            android:id="@+id/total_Budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- Insert Budget Amount Here --"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" android:translationX="25dp"/>

    <!-- Edit your budget -->
    <Button
            android:id="@+id/btn_edit_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit your budget"
            android:layout_marginBottom="16dp" android:translationX="115dp"/>

    <!-- Transaction list -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_transactions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

</LinearLayout>