<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".SavingsFragment">
    <TextView
            android:id="@+id/text_view_savings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Savings Goals"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="48dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:divider="?android:attr/dividerHorizontal"
            android:dividerHeight="8dp"
            android:paddingTop="4dp"
            tools:listitem="@layout/item_savings" />
    <Button
            android:id="@+id/btn_add_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Add Savings" />

</RelativeLayout>
