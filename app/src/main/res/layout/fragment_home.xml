<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

    <!-- Text to display a welcome message for the Home Screen in bold, larger font, and centered alignment. -->

    <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the Home Screen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"/>

    <!-- Button to navigate to Transaction List -->

    <Button
            android:id="@+id/btn_view_transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="30sp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="170dp"
            android:layout_marginTop="350dp"/>

    <!-- Text to go above Transactions on Home Screen -->

    <TextView
            android:id="@+id/tv_Transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Transactions"
            android:textSize="18sp"
            android:layout_marginEnd="95dp"
            android:layout_marginTop="-42dp"/>

    <!-- Spacer to push buttons to the bottom -->

    <View
            android:layout_width="0dp"
            android:layout_height="310dp"/>

    <!-- Bottom Buttons Container -->

    <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="388dp"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center">

        <!-- Button to Return Home -->

        <Button
                android:id="@+id/btn_home"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text="Home"/>

        <!-- Button to View Statistics Page -->

        <Button
                android:id="@+id/btn_statistics"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Statistics"/>

        <!-- Button to View Budgeting Page -->

        <Button
                android:id="@+id/btn_budgeting"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Budgeting"/>

        <!-- Button to View Profile Page -->

        <Button
                android:id="@+id/btn_profile"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Profile"/>
    </LinearLayout>
</LinearLayout>