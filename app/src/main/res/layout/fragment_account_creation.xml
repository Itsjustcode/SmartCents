<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

    <!-- Button for "Continue with Phone" functionality. -->
    <Button
            android:id="@+id/btn_continue_with_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with Phone"
            android:layout_marginBottom="12dp" />

    <!-- Button for "Continue with Email" functionality. -->
    <Button
            android:id="@+id/btn_continue_with_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with Email"
            android:layout_marginBottom="12dp" />

    <!-- Button for signing in with Facebook. -->
    <Button
            android:id="@+id/btn_signin_with_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with Facebook"
            android:layout_marginBottom="12dp" />

    <!-- Button for signing in with Google. -->
    <Button
            android:id="@+id/btn_signin_with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:layout_marginBottom="12dp" />

    <!-- Button for signing in with Apple. -->
    <Button
            android:id="@+id/btn_signin_with_apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with Apple"
            android:layout_marginBottom="12dp" />


</LinearLayout>
