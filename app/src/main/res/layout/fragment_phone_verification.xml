<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

    <!-- TextView provides instructions for the user to input the 6-digit verification code. -->
    <TextView
            android:id="@+id/tv_enter_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the 6-digit code sent to your phone"
            android:layout_marginBottom="16dp"
            android:textSize="18sp" />

    <!-- EditText allows the user to enter their verification code with centered text and a numerical keyboard. -->
    <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123456"
            android:inputType="number"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textSize="16sp" />

    <!-- Button lets the user proceed after entering the verification code. -->
    <Button
            android:id="@+id/btn_continue_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />
</LinearLayout>
