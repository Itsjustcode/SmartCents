<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SmartCents" parent="Theme.Material3.DayNight">
        <!-- Disable default ActionBar to allow using Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Use the colors defined in colors.xml -->
        <item name="android:background">@color/background_color</item>
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Theme.SmartCents" parent="Base.Theme.SmartCents" />
</resources>
